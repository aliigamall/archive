div(class="modal fade" id="loginDialog" tabindex="-1" role="dialog" aria-labelledby="loginDialogLabel")
    div(class="modal-dialog login-modal" role="document")
        .modal-content
            .modal-body
                ul(class="nav nav-tabs" role="tablist")
                    li(role="presentation" class="active")
                        a(href="#login" aria-controls="login" role="tab" data-toggle="tab") تسجيل دخول
                    li(role="presentation")
                        a(href="#register" aria-controls="register" role="tab" data-toggle="tab") حساب جديد
                .tab-content
                    div(role="tabpanel" class="tab-pane active" id="login")
                        .form-group
                            label البريد الإلكترونى
                            input(type="email" class="form-control")
                        .form-group
                            label كلمة المرور
                            input(type="password" class="form-control")
                        .form-group
                            a(href="#0") نسيت كلمة السر
                        .form-group
                            input(type="submit" class="btn btn-primary btn-lg btn-block" value="دخول")
                    div(role="tabpanel" class="tab-pane" id="register")
                        .form-group
                            label البريد الإلكتروني
                            input(type="email" class="form-control")
                        .form-group
                            label الإسم بالكامل
                            input(type="text" class="form-control")
                        .form-group
                            label كلمة المرور
                            input(type="password" class="form-control")
                        .form-group
                            label تأكيد كلمة المرور
                            input(type="password" class="form-control")
                        .form-group
                            input(type="submit" class="btn btn-primary btn-lg btn-block" value="تسجيل")